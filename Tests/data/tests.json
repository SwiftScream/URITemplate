{
    "Level 1" :
    {
        "level": 1,
        "variables": {
           "var"   : "value",
           "hello" : "Hello World!"
        },
        "testcases" : [
            ["literal", "literal"],
            ["literal%20%21with%20percents%21", "literal%20%21with%20percents%21"],
            ["literal/{hello}", "literal/Hello%20World%21"]
        ]
    },
    "Level 2" :
    {
        "level": 2,
        "variables": {
            "var"   : "value",
            "hello" : "Hello World!",
            "path"  : "/foo/bar"
        },
        "testcases" : [
            ["{#var}", "#value"],
            ["{#hello}", "#Hello%20World!"],
            ["{#path}/here", "#/foo/bar/here"],
            ["here?ref={#path}", "here?ref=#/foo/bar"]
        ]
    },
    "Level 3" :
    {
        "level": 3,
        "variables": {
            "var"   : "value",
            "hello" : "Hello World!",
            "path"  : "/foo/bar",
            "x"     : "1024",
            "y"     : "768",
            "p%20e" : "percent encoded",
            "empty" : ""
        },
        "testcases" : [
            ["{x,p%20e}/here", "1024,percent%20encoded/here"],
            ["{x,empty,y,undef}", "1024,,768"],
            ["{undef1,undef2,undef3}", ""],
            ["{undef1,undef2,empty,undef3}", ""],
            ["{undef1,empty,undef2,empty,undef3}", ","]
        ]
    },
    "Level 4" :
    {
        "level": 4,
        "variables": {
            "list"   : [""],
            "empty"  : {},
            "dict"   : {"a":""}
        },
        "testcases" : [
            ["{;list}", ";list"],
            ["{;list*}", ";list"],
            ["{;empty}", ""],
            ["{;empty*}", ""],
            ["{;dict}", ";dict=a,"],
            ["{;dict*}", ";dict"]
        ]
    }
}
